<%= form_with(model: @body_record, local: true) do |f| %>
    <label for="body_weight">体重を入力してください<span class="indispensable">必須</span></label>
      <p><%= f.text_field :body_weight, class: "form-input", placeholder:"(※半角数字で入力)  例:60.2", style: "text-align:center" %> kg</p>
    <label for="fat">体脂肪率を入力してください<span class="indispensable">必須</span></label>
      <p><%= f.text_field :fat, class: "form-input", placeholder:"(※半角数字で入力)  例:18.3", style: "text-align:center" %> ％</p>
    <label for="todays_condition">体調を選択してください</label>
      <p><%= f.select :todays_condition, [["最高!","最高!"],["良い","良い"],["普通","普通"],["良くない・・","良くない・・"]], include_blank: "選択してください", class: "form-control" %></p> 
  <div class="mb-3"> 
    <button type="submit" class="btn btn-primary">保存する</button>
  </div>  
<% end %>