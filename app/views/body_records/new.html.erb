  <h1>体組成を入力</h1>
  <div class="form">
    <div class="form-group col-md-6">
      <%= form_with(model: @body_record, local: true) do |f| %>

      <%= render 'shared/error_messages', model: f.object %>
      
      <label for="date">日付を選択してください</label>
        <%= f.date_field :date, class: "form-control" %>
      <label for="body_weight">体重を入力してください（例: 60.2）</label> 
        <%= f.text_field :body_weight, class: "form-control"%>
      <label for="fat">体脂肪を入力してください（例: 18.6）</label>
        <%= f.text_field :fat, class: "form-control" %>
      <label for="todays_condition">体調を選択してください</label>
        <%= f.select :todays_condition, [["最高!",1],["良し",2],["普通",3],["良くない・・",4]], include_blank: "選択してください", class: "form-control" %>
        <div class="mb-3"> 
          <button type="submit" class="btn btn-primary">保存する</button>
        </div>   
    </div>
      <% end %>
      <%= link_to "マイページへ戻る", training_records_path %>
  </div>