<!DOCTYPE html>
<html>
  <head>
    <title>TrainingMemo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="/assets/application">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header class="header">
      <div class="header__bar_row">
        <h1 class="site_title"><a href="/">TrainingMemo</a></h1>
        <% if user_signed_in? %>
          <div class="sign_out_nav">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </div>
        <% else %>
          <div class="login_nav">
            <%= link_to "ログイン", new_user_session_path, class: "#" %>
            <%= link_to "新規登録", new_user_registration_path, class: "#" %>
          </div>
        <% end %>

			<div id="site_reserve">
				<p>お問い合わせはこちらから</p>
				<p class="site_tel">TEL:000-000-0000</p>
			</div>
      <div class="clearlist"></div>
		</div>
  </div>

    </header>
    <%= yield %>
	<footer>
		<%# <img src="images/logo.png"> %>
		<p>
			Copyright(c) Training_memo.com
		</p>
	</footer>    
  </body>
</html>
