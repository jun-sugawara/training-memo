<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field col-md-6">
    <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field col-md-6">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field col-md-6">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>

    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field col-md-6">
    <%= f.label :password_confirmation, "パスワード（確認のためもう一度入力してください）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field col-md-6">
    <%= f.label :age, "年齢" %><br />
    <%= f.text_field :age, autofocus: true, autocomplete: "age" %>
  </div>

  <div class="field col-md-6">
    <%= f.label :gender, "性別" %><br />
    <%= f.text_field :gender, autofocus: true, autocomplete: "gender" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
