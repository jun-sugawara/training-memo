<h3 class="form-heading">ログイン</h3>
<div class="container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" , class: "devise-form" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワード", class: "devise-form" %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "6文字以上", class: "form-input" %>
  </div>

  <div class="actions">
    <%= f.submit "ログインする", class: "btn btn-success" %>
  </div>
</div>

<% end %>

<%= render "devise/shared/links" %>

